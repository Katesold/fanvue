{
  "name": "fanvue-funds-console",
  "private": true,
  "version": "1.0.0",
  "description": "Fanvue Funds Console - Payments, Payouts & Fraud Dashboard",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run dev --prefix server",
    "build": "npm-run-all build:client build:server",
    "build:client": "npm run build --prefix client",
    "build:server": "npm run build --prefix server",
    "test": "npm-run-all test:client test:server",
    "test:client": "npm run test --prefix client",
    "test:server": "npm run test --prefix server",
    "lint": "npm-run-all lint:client lint:server",
    "lint:client": "npm run lint --prefix client",
    "lint:server": "npm run lint --prefix server",
    "install:all": "npm-run-all install:root install:client install:server",
    "install:root": "npm install",
    "install:client": "npm install --prefix client",
    "install:server": "npm install --prefix server"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  }
}
